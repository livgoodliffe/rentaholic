<div class="row">
  <div class="col-sm">
    <!-- My Items -->
    <div class="heading">
      <h2>Wishlisted Items</h2>
    </div>
     <div class="list-channel d-flex flex-wrap">
      <div class="list-channel d-flex flex-wrap justify-content-around">
      <% @wishlists.each do |wishlist| %>
        <div class="card-product m-3 card-hover">
          <img src="<%= wishlist.item.photo %>">
          <div class="card-product-infos">
            <h2><%= wishlist.item.name %></h2>
            <p><%= wishlist.item.description[0..100].ljust(105,".") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
