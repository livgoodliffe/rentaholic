<div class="background-full">
  <div class="slogan">
    <p>Become a</p>
    <h1>Rentaholic</h1>
    <p>Stop buying, get renting!</p>
  </div>

  <div class="container">
    <div class="color-card d-flex flex-wrap justify-content-center">
      <% Item::CATEGORIES.each do |category| %>
        <%= link_to controller: "items", category: category do %>
          <div class="category-card-border <%= category.parameterize %>-border">
            <div class="category-card">
              <div>
                <p class="icon <%= category.parameterize %>-icon"></p>
                <h5><%= category %></h5>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
