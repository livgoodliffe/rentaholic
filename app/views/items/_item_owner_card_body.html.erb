<div class="card-body d-flex flex-column">
  <div>Item Owner</div>
  <h5 class="card-title my-3"><%= @item.user.first_name %> <%= @item.user.last_name %>
  </h5>
    <%= image_tag(@item.user.photo, class: 'card-user-avatar-item-show rounded-circle') %>
  <h6 class="card-subtitle my-3 text-muted">Location: <%= @item.user.city %></h6>
  <p class="card-text"><%=@item.user.description%></p>
  <h5 class="card-title my-3">Item Rate: $<%= @item.daily_rate %> per day</h5>
  <% if @item.user == current_user %>
    This item is mine
  <% else %>
    <button id="modal_button" type="button" class="btn btn-primary my-3" data-toggle="modal" data-target="#booking-modal" data-whatever="@fat">Rent <%= @item.user.first_name %>'s <%= @item.name %></button>
    <br>
    <%= link_to "Add #{@item.user.first_name}'s #{@item.name } to my wishlist", new_wishlist_path(item: @item, user: current_user), class: "btn btn-outline-dark" %>
    <%= render 'bookings/modal_form', rate: @item.daily_rate %>
  <% end %>
</div>
