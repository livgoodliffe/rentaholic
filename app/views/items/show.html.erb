<div class="container">
  <div class="row justify-content-between">
    <div class="card shadow-sm col-8 p-0">
      <%= image_tag(@item.photo, class: "card-img-top") %>
      <div class="card-body text-left">
        <h5 class="card-title border-top pt-3"><%= @item.name %></h5>
        <div class="card-text d-flex container text-left p-0">
          <div class="col-8 pl-0">
            <p class="text-justify p-0"><%= @item.description %></p>
          </div>
          <div class="border rounded p-3 col-4">
            <p>Posted date: <%= @item.created_at.strftime("%d-%m-%Y") %></p>
            <p>Category: <%= @item.category %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="card col-3 text-left p-0">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= @item.user.first_name %> <%= @item.user.last_name %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Location: <%= @item.user.city %></h6>
        <p class="card-text">Put sone information about user? or and enquire about item form</p>
        <h5 class="card-title mt-auto">$ <%= @item.daily_rate %> per day</h5>
        <%= link_to "Rent me", new_booking_path, class: "btn btn-success" %>
      <div class="card-body">
        <h5 class="card-title"><%= @item.user_id %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <%=link_to "Rent #{@item.name}", new_item_booking_path(@item.id), class: 'card-link' %>
      </div>
    </div>
  </div>
</div>
