<div class="container">
  <div class="row justify-content-between">
    <div class="col-8 ">
      <div class="card shadow-sm p-0">
        <%= image_tag(@item.photo, class: "card-img-top") %>
        <div class="card-body text-left">
          <h5 class="card-title border-top pt-3"><%= @item.name %></h5>
          <div class="card-text d-flex container text-left p-0">
            <div class="col-8 pl-0">
              <p class="text-justify p-0"><%= @item.description %></p>
            </div>
            <div class="border rounded p-3 col-4">
              <p>Posted date: <%= @item.created_at.strftime("%d-%m-%Y") %></p>
              <p>Category: <%= @item.category %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-title">
          Bookings
        </div>
        <div class="card-body">
          <% @item.bookings.each do |booking| %>
            <div>
              <span><%= booking.start_date %> - <%= booking.end_date %> (<%= (booking.end_date-booking.start_date).to_i %>) day(s) Mine:
                <%= booking.user == current_user ? ' Yes' : ' No' %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card col-3 text-left p-0">
      <div class="card-body d-flex flex-column">
        <div>Item Owner</div>
        <h5 class="card-title"><%= @item.user.first_name %> <%= @item.user.last_name %>
          <%= image_tag(@item.user.photo, class: 'card-user-avatar-item-show') %>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">Location: <%= @item.user.city %></h6>
        <p class="card-text">Put sone information about user? or and enquire about item form</p>
        <h5 class="card-title">$ <%= @item.daily_rate %> per day</h5>
        <% if @item.user == current_user %>
          This one is mine
        <% else %>
          <button id="modal_button" type="button" class="btn btn-primary" data-toggle="modal" data-target="#booking-modal" data-whatever="@fat">Rent me</button>
          <br>
          <%= link_to "Add me to wishlist", new_wishlist_path(item: @item, user: current_user), class: "btn btn-outline-dark" %>
          <%= render 'bookings/modal_form', rate: @item.daily_rate %>
        <% end %>
      </div>
    </div>
  </div>
</div>
