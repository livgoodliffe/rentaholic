<% booking = @bookings[booking_index] %>
<% item = booking.item %>
<% owner = item.user %>
<% days = (booking.end_date - booking.start_date).to_i %>
<% content = booking.review.content %>
<% full_stars = booking.review.stars %>
<% empty_stars = Review::STARS.length - 1 - full_stars %>
<div class="modal fade" id="review-modal-read-<%=booking_index%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <%= owner.first_name %>'s <strong><%= item.name %></strong> Review
        </h5>
        <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
          Close
        </button>
      </div>
      <div class="modal-body">
        <h6>
          Rented for <strong><%= pluralize(days, 'day') %></strong> from <strong><%= booking.start_date.strftime("%a %d %b %Y")%></strong>  to <strong><%= booking.end_date.strftime("%a %d %b %Y") %></strong>
        </h6>
        <div class="review-content"><%= content %></div>
      </div>
      <div class="modal-footer d-flex justify-content-center review-stars-footer">
        <div class="review-stars">
          <% full_stars.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% empty_stars.times do %>
            <i class="far fa-star"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
